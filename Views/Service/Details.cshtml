@model MyFirstApp.Models.Service

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Service</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServiceDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SampleImage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SampleImage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MSRP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MSRP)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd>
    </dl>
</div>
<div>
    <form asp-controller="Carts" asp-action="AddToCart">
        <input type="hidden" name="serviceId" value="@Model.Id">
        <input type="hidden" name="quantity" value="1">
        <input type="submit" value="Quick Add To Cart" class="btn btn-success">
    </form>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <span>&nbsp;|&nbsp;</span>
    }
    <a asp-action="Index">Back to List</a>
</div>
