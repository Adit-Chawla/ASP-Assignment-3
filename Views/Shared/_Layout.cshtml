<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TheSocialers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyFirstApp.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&family=Oswald:wght@500&display=swap"
        rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com"> <!--Oswald Font-->

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> <!--Lato Font-->
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital@1&family=Open+Sans:wght@300&display=swap"
        rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com"> <!--RobotoSlab Font-->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab&display=swap" rel="stylesheet">

    @* <script src="~/js/site.js" defer></script> *@
    <script src="~/js/particles.js"></script>
    <script src="~/js/app.js"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/image.png" alt="Logo" class="navbar-logo">
                </a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">The Socialers</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark first-link" asp-area="" asp-controller="Home"asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Brief">Brief</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="Index">Departments</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Service" asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carts" asp-action="Index">MyCart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">Orders</a>
                        </li>

                    </ul>

                    <div class = "navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a asp-area="Identity" asp-page="/Account/Manage/Index"
                                class="nav-link text-dark">
                                    Hello @User?.Identity.Name!
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-area="Identity" asp-page="/Account/Logout"
                                class="nav-link text-dark">
                                    Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a asp-area="Identity" asp-page="/Account/Register"
                                class="nav-link text-dark">
                                    Register
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-area="Identity" asp-page="/Account/Login"
                                class="nav-link text-dark">
                                    Login
                                </a>
                            </li>

                        }
                    </div>

                    <div class="cleanslate w24tz-current-time w24tz-middle" style="display: inline-block !important; visibility: hidden !important; min-width:100px
                        !important; min-height:100px !important;">
                        <p><a href="//24timezones.com/current_time/canada_barrie_clock.php"
                                style="text-decoration: none" class="clock24"
                                id="tz24-1695247514-c210741-eyJob3VydHlwZSI6MTIsInNob3dkYXRlIjoiMSIsInNob3dzZWNvbmRzIjoiMCIsImNvbnRhaW5lcl9pZCI6ImNsb2NrX2Jsb2NrX2NiNjUwYjZjOWEzM2Q0NyIsInR5cGUiOiJkYiIsImxhbmciOiJlbiJ9"
                                title="Barrie time" target="_blank" rel="nofollow">Current time in Barrie</a></p>
                        <div id="clock_block_cb650b6c9a33d47"></div>
                    </div>
                    <script type="text/javascript" src="//w.24timezones.com/l.js" async></script>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TheSocialers - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
